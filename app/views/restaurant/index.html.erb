
<div class="jumbotron">
	<div class="container">
		<h1>Hello Restaurant Enthusiats!</h1>
		<p>This is the index view, it shows a list of the restaurants!</p>
	</div>
</div>

<div class="row">
	<h2 class="text-center">Our Restaurants:</h2>
</div>
<div class="row">
	<% @restaurants.each do |restaurant| %>
	<div class='col-md-3 col-lg-4'>
		<h2><%= link_to restaurant.name, restaurant %></h2>
		<p><%= restaurant.description %></p>
	</div>
	<% end %>
</div>